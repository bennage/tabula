.page
	h1 new campaign

	form(method="post")
		fieldset
			legend setup campaign
			p
				label(for="campaign[name]") name:
				input(type="text", name="campaign[name]", value=campaign.name)
		fieldset
			legend initial scene
			p
				label(for="scene[name]") name:
				input(type="text", name="scene[name]", value=scene.name)
			p
				label(for="scene[descrtiption]") descrtiption:
				textarea(name="scene[descrtiption]", value=scene.descrtiption)
			p
				label(for="scene[imageUrl]") imageUrl:
				input(type="url", name="scene[imageUrl]", value=scene.imageUrl)    

		p.buttons
			input(type="submit", value="Save")