script#post-template(type='text/x-jquery-tmpl')
	.post
		.type ${type}
		.when ${when}
		.body ${body}	
	
h1 tabula

#account
	- if (!everyauth.loggedIn)
		h2 Sign In
		a(href='/auth/facebook') Connect with Facebook
	- else
		- if (everyauth.facebook)
			-var user = everyauth.facebook.user; 
			p= user.first_name + ' ' + user.last_name
				a(href='/logout') Sign Out
			.create
				p
					a(href='/campaigns/add') Create Campaign
				p
					a(href='/characters/add') Create Character
			- if (user.characters)
				ul.characters
					- each name, id in user.characters
						li
							a(href='/character/' + id)= name

#context
	div character
	div map

