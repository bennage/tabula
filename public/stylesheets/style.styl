@import 'normalize'

bg = rgb(222,242,196)
header = rgb(102,84,70)
header_color = rgb(229,104,63)
alt_accent = rgb(174,204,182)
accent = rgb(128,153,148)
header_text = hsl(0,100%,100%)

div, header, footer, section
	box-sizing border-box 

html
	height 100%
	width 100%

body
	font 14px 'Lucida Grande', Helvetica, Arial, sans-serif
	background-color bg
	background-image url('/images/dirt.png')
	height 100%
	width 100%

header
	display table
	width 100%
	background-color header
	background-image url('/images/dirt.png')
	padding 12px

header h1
	display table-cell
	color header_text
	text-shadow white 0px 0px 2px, black 1px 1px 0px
	width 80%
	margin 0

header #account
	display table-cell
	width 20%

footer
	background-color header
	background-image url('/images/dirt.png')
	padding 12px
	color white

#main
	height 100%
	width 100%
	display: -webkit-box;
	display: -moz-box;
	display: box;

	-webkit-box-orient: vertical;
	-moz-box-orient: vertical;
	box-orient: vertical;

section[role=game] 
	display -webkit-box
	display -moz-box
	display box

	-webkit-box-flex: 1;
	-moz-box-flex: 1;
	box-flex: 1;

#context
	width 240px
	min-height 400px
	border-right 1 dotted gray
	background-color alt_accent
	padding 8px

#board
	-webkit-box-flex 1
	-moz-box-flex 1
	box-flex 1

#messages .error
	color red

.create
	display none

@import 'post'